<% layout('client/Boilerplate') %>

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="Portfolio.html">Portfolio</a></li>
                <li>Portfolio Details</li>
            </ol>
            <h2>Portfolio Details</h2>
        </div>
    </section>
    <!-- End Breadcrumbs -->

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">
                            <div class="">
                                <img src="/<%=onePortfolioData[0].path%>" alt="" />
                            </div>
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>Project information</h3>
                        <ul>
                            <li><strong>Category</strong>: <%=onePortfolioData[0].category%></li>
                            <li><strong>Client</strong>: <%=onePortfolioData[0].client%></li>
                            <li><strong>Project date</strong>: <%=onePortfolioData[0].projectDate%></li>
                        </ul>
                    </div>
                    <div class="portfolio-description">
                        <h2><%=onePortfolioData[0].title %></h2>
                        <p>
                            <%-onePortfolioData[0].projectBody%>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Portfolio Details Section -->
</main>
<!-- End #main -->