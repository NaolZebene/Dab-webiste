<% layout('client/Boilerplate') %>

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="/">Home</a></li>
                <li>Blogs </li>
            </ol>
            <h2>Blogs</h2>
        </div>
    </section>
    <!-- End Breadcrumbs -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-8 entries">
                    <% if(blogData.length){ %>
                    <% for(let index =0; index<blogData.length; index++){ %>
                    <article class="entry">
                        <div class="entry-img">
                            <img src="/<%=blogData[index].path%>" alt="" class="img-fluid" />
                        </div>

                        <h2 class="entry-title">
                            <a href="/blogs/<%=blogData[index].blogId%>"><%=blogData[index].title%></a>
                        </h2>

                        <div class="entry-meta">
                            <ul>
                                <li class="d-flex align-items-center">
                                    <i class="bi bi-person"></i>
                                    <a href="#"><%=blogData[index].author%></a>
                                </li>
                                <li class="d-flex align-items-center">
                                    <i class="bi bi-clock"></i>
                                    <a href="#"><time datetime="2020-01-01"><%=blogData[index].dateTime%></time></a>
                                </li>
                            </ul>
                        </div>

                        <div class="entry-content">
                            <p>
                                <%- blogData[index].body.slice(0,340) %> ...
                            </p>
                            <div class="read-more">
                                <a href="/blogs/<%=blogData[index].blogId%>">Read More</a>
                            </div>
                        </div>
                    </article>
                    <% } %>
                    <% } %>


                </div>
                <!-- End blog entries list -->

                <div class="col-lg-4">
                    <div class="sidebar">
                        <h3 class="sidebar-title">Search</h3>
                        <div class="sidebar-item search-form">
                            <form action="">
                                <input type="text" />
                                <button type="submit"><i class="bi bi-search"></i></button>
                            </form>
                        </div>
                        <!-- End sidebar search formn-->

                        <h3 class="sidebar-title">Categories</h3>
                        <div class="sidebar-item categories">
                            <ul>
                                <% if(categoryData.length){%>
                                <% for(let index = 0; index < categoryData.length; index++){ %>
                                <li>
                                    <a
                                        href="/category/<%=categoryData[index].title%>"><%=categoryData[index].title%></a>
                                </li>
                                <% } %>
                                <% } %>

                            </ul>
                        </div>
                        <!-- End sidebar categories-->

                        <h3 class="sidebar-title">Recent Posts</h3>
                        <div class="sidebar-item recent-posts">
                            <% if(blogData.length > 3){ %>
                            <% for(let index=3; index > 0; index--){ %>
                            <div class="post-item clearfix">
                                <img src="/<%=blogsData[index].path%>" alt="" />
                                <h4>
                                    <a href="/blogs/<%=blogData[index].blogId%>"><%=blogData[index].title%></a>
                                </h4>
                                <time datetime="2020-01-01"><%=blogData[index].dateTime%>/time>
                            </div>
                            <% } %>
                            <% } %>


                        </div>
                        <!-- End sidebar recent posts-->

                        <h3 class="sidebar-title">Tags</h3>
                        <div class="sidebar-item tags">
                            <ul>
                                <% if(tagData.length){ %>
                                <% for(let index=0; index<tagData.length; index++){ %>
                                <li><a href="/tags/<%=tagData[index].title%>"><%=tagData[index].title%></a></li>
                                <% } %>
                                <% } %>
                            </ul>
                        </div>
                        <!-- End sidebar tags-->
                    </div>
                    <!-- End sidebar -->
                </div>
                <!-- End blog sidebar -->
            </div>
        </div>
    </section>
    <!-- End Blog Section -->
</main>
<!-- End #main -->