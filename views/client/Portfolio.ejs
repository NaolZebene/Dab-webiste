<% layout('client/Boilerplate') %>


<main>
    <!-- ======= Portfolio Section ======= -->
    <section id="portfolioPage" class="portfolio">
        <div class="container" data-aos="fade-up">
            <header class="section-header">
                <p>Check our latest work</p>
            </header>



            <div class="row gy-4 portfolio-container" data-aos="fade-up" data-aos-delay="200">

                <%if(portfolioData.length) {%>
                <% for(let index=0; index < portfolioData.length; index++){%>

                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                    <div class="portfolio-wrap">
                        <img src="/<%=portfolioData[index].path%>" class="img-fluid" alt="" />
                        <div class="portfolio-info">
                            <h4><%=portfolioData[index].title%></h4>
                            <p><%=portfolioData[index].category%></p>
                            <div class="portfolio-links">
                                <a href="/portfolio/<%=portfolioData[index].portfolioId%>"
                                    data-gallery="portfolioGallery" class="portfokio-lightbox" title="App 1"><i
                                        class="bi bi-plus"></i></a>
                                <a href="/portfolio/<%=portfolioData[index].portfolioId%>" title="More Details"><i
                                        class="bi bi-link"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                <%  }%>
            </div>
        </div>
    </section>
    <!-- End Portfolio Section -->
</main>
<!-- End #main -->