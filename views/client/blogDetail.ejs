                <!-- .navbar -->
            </div>
        </header>
        <!-- End Header -->

        <main id="main">

            <!-- ======= Breadcrumbs ======= -->
            <section class="breadcrumbs">
                <div class="container">

                    <ol>
                        <li><a href="index.html">Home</a></li>
                        <li><a href="blog.html">Blog</a></li>
                        <li>Blog Single</li>
                    </ol>
                    <h2>Blog Single</h2>

                </div>
            </section><!-- End Breadcrumbs -->

            <!-- ======= Blog Single Section ======= -->

            <section id="blog" class="blog">
                <div class="container" data-aos="fade-up">

                    <div class="row">
                        <% if(oneBlogData.length){ %>
                        <div class="col-lg-8 entries">

                            <article class="entry entry-single">

                                <div class="entry-img">
                                    <img src="/<%=oneBlogData[0].path%>" alt="" class="img-fluid">
                                </div>

                                <h2 class="entry-title">
                                    <a href="#"><%-oneBlogData[0].title %></a>
                                </h2>

                                <div class="entry-meta">
                                    <ul>
                                        <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a
                                                href="#"><%=oneBlogData[0].author%>
                                            </a></li>
                                        <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a
                                                href="#"><time
                                                    datetime="2020-01-01"><%=oneBlogData[0].dateTime%></time></a></li>

                                    </ul>
                                </div>

                                <div class="entry-content">
                                    <%-oneBlogData[0].body %>
                                </div>

                                <!--end of blog content-->

                                <div class="entry-footer">
                                    <i class="bi bi-folder"></i>
                                    <ul class="cats">
                                        <li><a href="#"><%=oneBlogData[0].blogCategory%></a></li>
                                    </ul>

                                    <i class="bi bi-tags"></i>
                                    <ul class="tags">
                                        <li><a href="#"><%=oneBlogData[0].blogTags%></a></li>
                                    </ul>
                                </div>

                            </article><!-- End blog entry -->



                        </div><!-- End blog entries list -->
                        <% } %>

                        <div class="col-lg-4">

                            <div class="sidebar">



                                <h3 class="sidebar-title">Category</h3>
                                <div class="sidebar-item categories">
                                    <ul>
                                        <li><a href="#"><%=oneBlogData[0].blogCategory%></a></li>
                                    </ul>
                                </div><!-- End sidebar categories-->

                                <h3 class="sidebar-title">Recent Posts</h3>
                                <div class="sidebar-item recent-posts">

                                    <% if(blogData.length > 3){ %>
                                    <% for(let index = 3; index > 0; index--){ %>
                                    <div class="post-item clearfix">
                                        <img src="/<%=blogData[index].path%>" alt="">
                                        <h4><a href="/blogs/<%=blogData[index].blogId%>"> <%=blogData[index].title%></a>
                                        </h4>
                                        <time datetime="2020-01-01"><%=blogData[index].dateTime%>/time>
                                    </div>
                                    <% } %>
                                    <% } %>

                                </div><!-- End sidebar recent posts-->

                                <h3 class="sidebar-title">Tag</h3>
                                <div class="sidebar-item tags">
                                    <ul>
                                        <li><a href="#"><%=oneBlogData[0].blogTags%> </a>
                                        </li>

                                    </ul>
                                </div><!-- End sidebar tags-->

                            </div><!-- End sidebar -->

                        </div><!-- End blog sidebar -->

                    </div>

                </div>
            </section><!-- End Blog Single Section -->

        </main><!-- End #main -->

