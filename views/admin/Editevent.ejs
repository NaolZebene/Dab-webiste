<% layout('admin/Boilerplate') %>


<h3 class="modal-title text-dark mb-4">Edit Event</h3>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-primary m-0 font-weight-bold">Edit Event</p>
    </div>
    <div class="card-body">
        <div class="modal-body">
            <form id="postForm" enctype="multipart/form-data" method="post"
                action="/admin/editevent/<%=oneEvent[0].eventId%>">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="EventTitle" value="<%=oneEvent[0].title%>"
                        name="event[title]" />
                </div>

                <div class="form-group">
                    <label for="venue">Place</label>
                    <select class="form-control" id="EventPlace" name="event[venue]">
                        <option value="addisababa">Addis Ababa</option>
                        <option value="usa">USA</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="venue">Organizer</label>
                    <select class="form-control" id="EventOrganizer" name="event[host]">
                        <option value="mubarak">Mubarak</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="eventCategory">Category</label>
                    <select class="form-control" id="eventCategory" name="event[eventCategory]">
                        <% if(categoryData.length){ %>
                        <% for(let index =0; index<categoryData.length; index++){%>
                        <option value="<%= categoryData[index].title%>"><%= categoryData[index].title%></option>
                        <% } %>
                        <% } %>
                    </select>
                </div>


                <div class="form-group">
                    <label for="eventTags">Tags</label>
                    <select class="form-control" id="eventTags" name="event[eventTags]">
                        <% if(tagData.length){ %>
                        <% for(let index =0; index<tagData.length; index++){%>
                        <option value="<%= tagData[index].title%>"><%= tagData[index].title%></option>
                        <% } %>
                        <% } %>
                    </select>
                    <small class="form-text text-muted">press ctrl key to select more than one option</small>
                </div>


                <div class="form-group">
                    <label for="image">Upload Image</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="image" name='thumbImage' />
                        <label for="image" class="custom-file-label">Choose File</label>
                        <small class="form-text text-muted">Better to use < 3Mb</small>
                    </div>
                    <div class="form-group">
                        <label for="body">Body</label>
                        <textarea name="editor1" class="form-control"
                            id="postBody"><%-oneEvent[0].eventBody%> </textarea>
                        <small class="form-text text-muted">to paste use ctrl + shift + v</small>
                    </div>
                </div>
                <div class="form-group">
                    <label for="eventDate">Event Date</label>
                    <input class="form-control" id="eventDate" name="event[eventDate]" type="date">
                </div>


                <button class="btn btn-primary float-right" data-dismiss="modal" style="margin: 30px 50px">
                    Edit Event
                </button>
            </form>
        </div>
    </div>
</div>