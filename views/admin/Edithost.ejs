<% layout('admin/Boilerplate') %>

<div class="modal-body">
    <form id="OrganizerForm" action="/admin/edithost/<%=oneHost[0].hostId%>" method="post" class="validated-form"
        novalidate>
        <div class="form-group">
            <label for="eventOrganizerTitle">Title</label>
            <input type="text" class="form-control" value="<%=oneHost[0].title%>" id="eventOrganizerTitle"
                name="host[title]" required />
        </div>
        <div class="form-group">
            <label for="eventOrganizerDescription">Description</label>
            <input type="text" class="form-control" id="eventOrganizerDescription" value="<%=oneHost[0].description%>"
                name="host[description]" required />
        </div>
        <button class="btn btn-primary float-right" data-dismiss="modal" style="margin: 30px 50px">
            Edit Event Organizer
        </button>
    </form>
</div>