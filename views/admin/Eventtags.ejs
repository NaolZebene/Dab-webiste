<% layout('admin/Boilerplate') %>

<h3 class="modal-title text-dark mb-4">Event Tags</h3>
<!-- first part show Tags -->
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-primary m-0 font-weight-bold">All Event Tags</p>
    </div>
    <div class="card-body">
        <div class="modal-body row">
            <div class="col-9 col-md-8 col-sm-12">
                <table class="table table-striped postEventTable">
                    <thead class="background-dark text-center">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody id="EventLatestTabltag">
                        <% if(alltags.length) {%>
                        <% for(let index=0; index < alltags.length; index++) {%>
                        <tr>
                            <td><%= alltags[index].eventTagId %></td>
                            <td><%= alltags[index].title%></td>
                            <td><%= alltags[index].description%></td>
                            <td><a href="/admin/editeventtag/<%=alltags[index].eventTagId%>"
                                    class="btn btn-outline-primary">Edit</a></td>
                            <td><a href="/admin/deleteeventtag/<%=alltags[index].eventTagId%>"
                                    class="btn btn-outline-danger">Delete</a></td>
                        </tr>
                        <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-1"></div>
            <div class="col-2" style="margin-left: 10px">
                <div class="card text-center totalcard mb-3">
                    <div class="card-body">
                        <h3>Total Event Tags</h3>
                        <h4 class="display-4">
                            <span id="eventCount"><%= alltags.length %> </span>
                        </h4>
                        <a href="#addEventTags" class="btn btn-outline-grey bg-light btn-sm"><i class="fas fa-plus"></i>
                            Add Event Tag</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- second part -->
<div class="card shadow topmargin" id="addEventTags">
    <div class="card-header py-3">
        <p class="text-primary m-0 font-weight-bold">All Event Tags</p>
    </div>
    <div class="card-body">
        <div class="modal-body">
            <form id="postForm" method="post" action="/admin/eventtag" class="validated-form" novalidate>
                <div class="form-group">
                    <label for="eventTagTitle">Title</label>
                    <input type="text" class="form-control" id="eventTagTitle" name="tag[title]" required />
                </div>
                <div class="form-group">
                    <label for="eventTagDescription">Description</label>
                    <input type="text" class="form-control" id="eventTagDescription" name="tag[description]" required />
                </div>
                <button class="btn btn-primary float-right" data-dismiss="modal" style="margin: 30px 50px">
                    Add Event Tag
                </button>
            </form>
        </div>
    </div>
</div>